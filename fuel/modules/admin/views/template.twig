<!DOCTYPE html>
<html lang="en">
  <head>
    <title>トポ管理</title>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <!-- jQuery 読み込み -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <!-- semantic.css 読み込み --> 
    <link href='/public/assets/plugin/semanticui/semantic.min.css' rel='stylesheet' />
    <script src='/public/assets/plugin/semanticui/semantic.min.js'></script>
    <link href='/public/assets/plugin/semanticui/components/dropdown.min.css' rel='stylesheet' />
    <script src='/public/assets/plugin/semanticui/components/dropdown.min.js'></script>
    
    <!-- hamburgerメニュー -->
    <link href="/public/assets/plugin/hamburgers-master/dist/hamburgers.css" rel="stylesheet">

    <!-- swiper 読み込み -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/5.4.5/css/swiper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/5.4.5/js/swiper.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.5.0/fabric.min.js"></script>

    <script src="/public/assets/plugin/momentjs/moment.min.js"></script>

    <!-- draggable.js 読み込み -->
    {# // <script src="/public/assets/plugin/draggable/Draggable/Draggable.js"></script>
    // <script src="/public/assets/plugin/draggable/Sortable/Sortable.js"></script> #}

    <script src="https://cdn.jsdelivr.net/npm/@shopify/draggable@1.0.0-beta.11/lib/draggable.bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@shopify/draggable@1.0.0-beta.11/lib/sortable.js"></script>

    <!-- assets 読み込み -->
    {{asset_css('admin/app.css')}}
    {% if asset_get_file(controller ~ '.css', 'css')%}{{asset_css(controller ~ '.css')}}{% endif %}
    {# {{asset_css('admin/problem.css')}} #}

  </head>
  <body class="pushable">
    {{menu}}
    <div class="pusher">
      {{hamburger}}
      {{header}}
      <div class="ui main container main-container">
        {{content}}
      </div>
      {{footer}}
    </div>
    {{image_popup}}
    {{asset_js('admin/app.js')}}
    {% if asset_get_file(controller ~ '.js', 'js')%}{{asset_js(controller ~ '.js')}}{% endif %}
    {% if controller == 'admin\\problem' or controller == 'admin\\mproblem' %}
    {{asset_js('admin/problembase.js')}}
    {% endif %}
  </body>
</html>